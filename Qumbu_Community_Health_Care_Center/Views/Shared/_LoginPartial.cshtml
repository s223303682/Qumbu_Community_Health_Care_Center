@using Microsoft.AspNetCore.Identity
@using Qumbu_Community_Health_Care_Center.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
       
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
        
       

    
}
else
{
    <li class="nav-item ">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="register" type="submit" class="nav-link btn btn-link text-dark">Register</button>
            </form>
@*        <a class="nav-link text-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
*@    </li>
    <li class="nav-item">
        <a class="nav-link text-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
        
}
</ul>
